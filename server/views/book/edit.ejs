<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>
        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Book Title</label>
                <input type="text" class="form-control"
                id ="nameTextField"
                placeholder="Enter the Book Title"
                name="name"
                value="<%= book.name %>"
                required>
            </div>
            <div class="form-group">
                <label for="authorTextField">Author</label>
                <input type="text" class="form-control"
                id ="authorTextField"
                placeholder="Author"
                name="author"
                value="<%= book.author %>"
                required>
            </div>
            <div class="form-group">
                <label for="publishedTextField">Published</label>
                <input type="text" class="form-control"
                id ="publishedTextField"
                placeholder="Year of Publication"
                name="published"
                value="<%= book.published %>"
                required>
            </div>
            <div class="form-group">
                <label for="descriptionTextField">Description</label>
                <textarea type="text" class="form-control"
                id ="descriptionTextField"
                placeholder="Book Description"
                name="description"
                required>
                <%= book.description %></textarea>
            </div>
            <div class="form-group">
                <label for="priceTextField">Price</label>
                <input type="number" step=".01" class="form-control"
                id ="priceTextField"
                placeholder="Price"
                name="price" 
                value="<%= book.price %>"
                required>
            </div>

            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> SUBMIT
            </button>

            <a href="/book-list" class="btn btn-warning">
                <i class="fas fa-undo"></i> CANCEL</a>
        </form>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>